*,
*:before,
*:after
  padding 0
  margin 0
  box-sizing border-box

a,
a:hover,
a:visited,
  color inherit
  text-decoration none

ul,
li
  list-style none

input, button, textarea
  border 0
  outline 0

table,
th,
tr,
td
  border 0
  outline 0
  border-collapse collapse
